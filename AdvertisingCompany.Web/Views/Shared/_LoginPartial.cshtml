@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">       
            <li><a href="#"><span>Добро пожаловать,</span> <span class="glyphicon glyphicon-user"></span> @(ViewBag.UserName + "!")</a></li>
            <li><a href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();"><i class="fa fa-power-off" aria-hidden="true"></i> Выйти</a></li>
        </ul>
    }
}
