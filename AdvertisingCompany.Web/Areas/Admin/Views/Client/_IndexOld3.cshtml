    <a href="/admin/#clients/create" class="btn btn-warning"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Добавить клиента</a>
</div>
<section class="widget">
    <header>
        @*<h4>
            Клиенты рекламной компании
        </h4>
